{% form_theme form 'STXCroissantsBundle:Form:field_errors.html.twig' %}

<form class="form-horizontal" action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST">
    <div class="form-group">
        <div class="col-lg-3 control-label">
            {{ form_label(form.new.first) }}
        </div>
        <div class="col-lg-5">
            {{ form_widget(form.new.first, { 'attr' : {'class' : 'form-control'} }) }}
            {{ form_errors(form.new.first) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-3 control-label">
            {{ form_label(form.new.second) }}
        </div>
        <div class="col-lg-5">
            {{ form_widget(form.new.second, { 'attr' : {'class' : 'form-control'} }) }}
            {{ form_errors(form.new.second) }}
        </div>
    </div>
        
    {{ form_rest(form) }}
        
    <div class="form-group">
        <div class="col-lg-offset-3 col-lg-5">
            <input class="btn btn-primary" type="submit" value="{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}" />
        </div>
    </div>
</form>
