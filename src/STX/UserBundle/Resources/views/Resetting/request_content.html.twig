<form class="form-horizontal" action="{{ path('fos_user_resetting_send_email') }}" method="POST">
    <div class="form-group">
        {% if invalid_username is defined %}
            <p class="alert alert-danger">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
        {% endif %}
        <label for="username" class="col-lg-4 control-label">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
        <div class="col-lg-7">
            <input class="form-control" type="text" id="username" name="username" required="required" />
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-lg-offset-4 col-lg-5">
            <input class="btn btn-primary" type="submit" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}" />
        </div>
    </div>
</form>
