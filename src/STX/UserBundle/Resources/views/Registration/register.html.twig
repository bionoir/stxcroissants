{# src/STX/UserBundle/Resources/views/Security/login.html.twig #}

{% extends "STXUserBundle::layout.html.twig" %}

{% block croissantsMenu %}

{% endblock %}

{% block fos_user_content %}
	<div>
		<h1>My registration page</h1>
	</div>
    <form class="form-horizontal" action="{{ path('fos_user_registration_register') }}" method="post" {{ form_enctype(form) }} >
        <div class="form-group">
            <div class="col-lg-2 control-label">
                {{ form_label(form.username) }}
            </div>
            <div class="col-lg-5">
                {{ form_widget(form.username, { 'attr' : {'class' : 'form-control'} }) }}
                {{ form_errors(form.username) }}
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-lg-2 control-label">
                {{ form_label(form.email) }}
            </div>
            <div class="col-lg-5">
                {{ form_widget(form.email, { 'attr' : {'class' : 'form-control'} }) }}
                {{ form_errors(form.email) }}
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-lg-2 control-label">
                {{ form_label(form.plainPassword.first) }}
            </div>
            <div class="col-lg-5">
                {{ form_widget(form.plainPassword.first, { 'attr' : {'class' : 'form-control'} }) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-lg-2 control-label">
                {{ form_label(form.plainPassword.second) }}
            </div>
            <div class="col-lg-5">
                {{ form_widget(form.plainPassword.second, { 'attr' : {'class' : 'form-control'} }) }}
                {{ form_errors(form.plainPassword.second) }}
            </div>
        </div>
        
        {{ form_rest(form) }}
            
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-5">
                <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
                <a href="{{ path('stx_croissants_home') }}"><input type="button" class="btn btn-default" value="Annuler" /></a>
            </div>
            
        </div>
    </form>
{% endblock fos_user_content %}